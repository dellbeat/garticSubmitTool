<Window x:Class="GarticWordsTool.Views.WinLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GarticWordsTool.Views"
        mc:Ignorable="d"
        xmlns:prism="http://prismlibrary.com/"
        WindowStartupLocation="CenterOwner"
        prism:ViewModelLocator.AutoWireViewModel="False"    
        Title="{Binding Title}" Height="350" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10,10,10,10" HorizontalAlignment="Center">
            <TextBlock Text="Cookie字符串:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <TextBox Text="{Binding CookieStr}" Grid.Column="1" AcceptsReturn="True" TextWrapping="WrapWithOverflow" Margin="10,10,10,10" Width="450"/>
        </StackPanel>
        <Button Content="登录" Command="{Binding SubmitCommand}" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="70" Height="30"/>
    </Grid>
</Window>
